{
    "version": 2,
    "builds": [
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "*.css", "use": "@vercel/static" },
        { "src": "*.js", "use": "@vercel/static" },
        { "src": "api/server.js", "use": "@vercel/node" }
    ],
    "routes": [
        { 
            "src": "/api/socketio",
            "dest": "api/server.js"
        },
        { 
            "src": "/socket.io/(.*)",
            "dest": "api/server.js"
        },
        {
            "src": "/api/socketio/(.*)",
            "dest": "api/server.js"
        },
        { 
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
} 